# Docker Hub Configuration
DOCKER_USERNAME=your-dockerhub-username
TAG=latest

# Timezone
TZ=America/Los_Angeles

# Snapcast Environment Variables
AIRPLAY_CONFIG_ENABLED=1
AIRPLAY_SOURCE_NAME=Airplay
AIRPLAY_DEVICE_NAME="Plum Snapcast"

PIPE_CONFIG_ENABLED=1
PIPE_SOURCE_NAME=Airplay
PIPE_PATH=/tmp/snapfifo
PIPE_MODE=read

# Audio Output Configuration
# These settings control how the snapclient outputs audio to hardware
SNAPCLIENT_ENABLED=1
AUDIO_DEVICE=hw:Headphones
AUDIO_LATENCY=0
AUDIO_BUFFER_TIME=100
AUDIO_FRAGMENT_SIZE=4

# Spotify Configuration (Disabled for MVP)
SPOTIFY_CONFIG_ENABLED=0
#SPOTIFY_SOURCE_NAME=Spotify
#SPOTIFY_DEVICE_NAME=Plum Audio
#SPOTIFY_ACCESS_TOKEN=YourSpotifyToken

# Bluetooth Configuration (Disabled for MVP)
BLUETOOTH_CONFIG_ENABLED=0

# HTTPS Configuration
HTTPS_ENABLED=1